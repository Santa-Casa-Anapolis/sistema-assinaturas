# Configurações do Servidor
PORT=5000
NODE_ENV=development

# JWT Secret (Altere para uma chave segura em produção)
JWT_SECRET=sua-chave-secreta-muito-segura-aqui

# Configurações de E-mail - Usando email da Karla
EMAIL_USER=karla.souza@santacasa.org
EMAIL_PASS=sua-senha-do-email
EMAIL_ENABLED=true

# Configurações do Banco de Dados PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_NAME=notasfiscais_db
DB_USER=postgres
DB_PASSWORD=123456

# Configurações de Segurança
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Configurações de Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=application/pdf,application/vnd.openxmlformats-officedocument.wordprocessingml.document

# Configurações do Active Directory
AD_URL=ldap://ad.exemplo.com:389
AD_BASE_DN=DC=exemplo,DC=com
AD_USERNAME=CN=ServiceAccount,OU=ServiceAccounts,DC=exemplo,DC=com
AD_PASSWORD=senha_do_service_account

# Modo de Autenticação (local ou ad)
AUTH_MODE=local
